<UserControl x:Class="iLegMusic.Views.Pages.HomeMusicComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iLegMusic.Views.Pages"
             mc:Ignorable="d" 
               xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Mi Musica" FontSize="34" FontFamily="Segoe UI Semibold" Margin="20"></TextBlock>
            <ui:Button VerticalAlignment="Center" Grid.Column="1">
                <ui:SymbolIcon Symbol="Search20"></ui:SymbolIcon>
            </ui:Button>
        </Grid>
        <Separator VerticalAlignment="Bottom"></Separator>
        <ui:VirtualizingItemsControl Grid.Row="1" ItemsSource="{Binding Musics}">
            <ui:VirtualizingItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top"></WrapPanel>
                </ItemsPanelTemplate>
            </ui:VirtualizingItemsControl.ItemsPanel>
            <ui:VirtualizingItemsControl.ItemTemplate>
                <DataTemplate>
                    <ui:CardAction Width="170" VerticalAlignment="Top" Margin="7" Padding="10" Click="Button_Click">
                        <StackPanel>
                            <Grid Width="70" Margin="0,0,0,10" HorizontalAlignment="Left" Height="70">
                                <Rectangle Fill="{ui:ThemeResource}"  RadiusX="7" RadiusY="7">
                                    <Rectangle.Stroke>
                                        <SolidColorBrush Color="Black" Opacity="0.1"></SolidColorBrush>
                                    </Rectangle.Stroke>
                                </Rectangle>
                                
                                <ui:SymbolIcon x:Name="iconmusic" Symbol="MusicNote124" FontSize="24"></ui:SymbolIcon>
                                <Rectangle Fill="{Binding MusicSelected.Img}" RadiusX="7" RadiusY="7"></Rectangle>
                            </Grid>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" TextWrapping="Wrap"></TextBlock>
                                <TextBlock Text="{Binding Album}" Opacity="0.6" FontSize="12"></TextBlock>
                                <TextBlock Text="{Binding Artist}" Opacity="0.6" FontSize="12"></TextBlock>
                                <TextBlock Text="{Binding url}" TextTrimming="CharacterEllipsis" ToolTip="{Binding url}" Opacity="0.4" FontSize="12"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ui:CardAction>
                </DataTemplate>
            </ui:VirtualizingItemsControl.ItemTemplate>
        </ui:VirtualizingItemsControl>
        <ui:Card  Grid.Row="2" Background="{ui:ThemeResource}" VerticalAlignment="Bottom">
           
            <Grid Height="58">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="58"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid>
                    <ui:SymbolIcon Symbol="MusicNote124" FontSize="24"></ui:SymbolIcon>
                    <Rectangle Fill="{Binding MusicSelected.Img}" RadiusX="7" RadiusY="7"></Rectangle>
                </Grid>
                <Grid Grid.Column="1" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock  DockPanel.Dock="Top"  Text="{Binding MusicSelected.Title}"></TextBlock>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock DockPanel.Dock="Top" Text="{Binding MusicSelected.Album}"></TextBlock>
                        <ui:SymbolIcon Grid.Column="1" Symbol="Circle16" Filled="True" Margin="7,3,7,0" FontSize="7"></ui:SymbolIcon>
                        <TextBlock Grid.Column="2" DockPanel.Dock="Top" Text="{Binding MusicSelected.Artist}" TextTrimming="CharacterEllipsis"></TextBlock>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding MusicSelected.url}" TextTrimming="CharacterEllipsis" Opacity="0.6" FontSize="12"></TextBlock>

                </Grid>
                <StackPanel Orientation="Horizontal" Grid.Column="2" DockPanel.Dock="Right">
                    <ui:Button Command="{Binding BackCommand}">
                        <ui:SymbolIcon Symbol="ChevronLeft20"></ui:SymbolIcon>
                    </ui:Button>
                    <ui:Button Margin="7,0,7,0" Command="{Binding PlayOrPauseCommand}" HorizontalAlignment="Stretch">
                        <ui:SymbolIcon Symbol="{Binding Symbolplay}" ></ui:SymbolIcon>
                    </ui:Button>
                    <ui:Button Command="{Binding NextCommand}">
                        <ui:SymbolIcon Symbol="ChevronRight16"></ui:SymbolIcon>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </ui:Card>
    </Grid>
</UserControl>
